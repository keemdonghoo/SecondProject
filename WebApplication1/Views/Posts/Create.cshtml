@model TeamProject.Models.ViewModels.CreatePostViewModel

@{
    //int page = (int)ViewData["page"];
}
<script src="~/js/DeleteUser/DeleteOk.js"></script>
<script src="~/js/Post/FileTitle.js"></script>
<body>

    <script src="~/js/DeleteUser/DeleteOk.js"></script>
    <section class="product-page spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="product_page_content">
                        <div class="product__page__title">
                            <div class="row">
                                <div class="col-lg-8 col-md-8 col-sm-6">
                                    <div class="section-title">
                                        <h4>자유게시판</h4>
                                    </div>
                                </div>
                            </div>
                        </div>

                        
                        <form class="label__style" method="post" asp-action="Create"  enctype="multipart/form-data">
                            <style>
                                .label__style label{
                                    color: white;
                                    width: 100%;
                                }

                            </style>
                            <div>
                                <label asp-for="Title"></label>
                                <input type="text" asp-for="Title" class="form-control" placeholder="제목을 입력하세요" />
                                <div><span class="text-danger">@TempData["TitleError"]</span></div>
                            </div>
                            <div style="padding-bottom: 10px;">
                                <label asp-for="Content"></label>
                                <textarea asp-for="Content" class="form-control" rows="15" placeholder="내용을 입력하세요"></textarea>
                                <div><span class="text-danger">@TempData["ContentError"]</span></div>
                            </div>
                            
                            <div>
                                <input type="text" class="form-control" name="fileTitle" placeholder="Enter a title">
                                <input type="file" name="Attachments" style="color:white;" multiple>
                            </div>

                            <div style="text-align: center;">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                            <!-- 나머지 폼 요소들 -->
                            @*<a class="btn btn-outline-dark"
                            asp-controller="Board"
                            asp-action="List"
                            asp-route-page="@(page)">목록</a>*@
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>
</body>











