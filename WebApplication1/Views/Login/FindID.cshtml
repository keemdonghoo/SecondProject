@{
}
@model TeamProject.Models.ViewModels.EditUserRequest
<body>
    <section class="login spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="login__form">
                        <h3>Find ID</h3>
                        <form action="#">
                            <div class="input__item">
                                <input type="text" placeholder="User Name" id="Name">
                                <span class="icon_profile"></span>
                            </div>
                            <div class="input__item">
                                <input type="text" placeholder="PhoneNumber" id="pnid">
                                <span class="icon_phone"></span>
                            </div>
                            <button onclick="findId()" type="button" class="site-btn">Get ID</button>
                        </form>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="login__form">
                        <h3>Find Password</h3>
                        <form>
                            <div class="input__item">
                                <input type="text" placeholder="User ID" id="ID">
                                <span class="icon_profile"></span>
                            </div>
                            <div class="input__item">
                                <input type="text" placeholder="PhoneNumber" id="pnpw">
                                <span class="icon_phone"></span>
                            </div>

                            <button onclick="findPw()" type="button" class="site-btn">Get Password</button>


                            <div id="NewPassword" style="display: none;">
                                <div><span class="text-danger">@TempData["PassWordError"]</span></div>
                                <div class="input__item">
                                    <input type="password" placeholder="Password" asp-for="PassWord" value="@Model.PassWord">
                                    <span class="icon_lock"></span>
                                </div>

                                <div class="input__item">
                                    <input type="password" placeholder="Password Check" asp-for="PassWordCheck" value="@Model.PassWord">
                                    <span class="icon_lock"></span>
                                </div>
                                <button onclick="findPw()" type="button" class="site-btn">New Password</button>
                            </div>


                        </form>
                    </div>
                </div>
            </div>

        </div>
    </section>

</body>
<script>
    async function findId() {
        let name = document.getElementById("Name").value;
        let phone = document.getElementById("pnid").value;

        if (name.trim() === "") {
            alert("이름을 입력하세요.");
            return;
        }
        else if (phone.trim() === "") {
            alert("전화번호를 입력하세요.");
            return;
        }

        //alert(`${name}`)
        //alert(`${phone}`)
        try {
            var url = `/FindUserId?name=${encodeURIComponent(name)}&phone=${phone}`;
            const response = await fetch(url);
            const data = await response.text();
            
            if (data === "") {
                alert("존재하지 않는 사용자 정보 입니다.");
                return;
            }
            else if(data === "1")
            {
                alert("전화번호가 일치하지 않습니다.")
            }
            else if (data.length > 2) {
                alert(`${name}님의 아이디는 : ${data} 입니다.`);
            }
        }
        catch (error) {
            alert(`오류가 발생했습니다: ${error}`);
        }
    }

    async function findPw() {
        let id = document.getElementById("ID").value;
        let phone = document.getElementById("pnpw").value;

        if (id.trim() === "") {
            alert("아이디를 입력하세요.");
            return;
        }
        else if (phone.trim() === "") {
            alert("전화번호를 입력하세요.");
            return;
        }
        try {
            var url = `/FindUserPw?id=${id}&phone=${phone}`;
            const response = await fetch(url);
            const data = await response.text();

            if (data === "") {
                alert("존재하지 않는 사용자 정보 입니다.");
                return;
            }
            else if (data === "1") {
                alert("전화번호가 일치하지 않습니다.")
            }
            else if (data === "2") {
                document.getElementById("NewPassword").style.display = "block";
            }
        }
        catch (error) {
            alert(`오류가 발생했습니다: ${error}`);
        }

        

    }
</script>

