@model TeamProject.Models.Domain.Movie
@{
}
@* @Url.Action("Index", "Home") *@
<script src="~/js/detail.js"></script>

<body>

    <!-- Breadcrumb Begin -->
    <div class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__links">
                        <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->
    <!-- Anime Section Begin -->
    <section class="anime-details spad">
        <div class="container">
            <div class="anime__details__content">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="anime__details__pic set-bg" data-setbg="">
                            <div class="comment"><i class="fa fa-comments"></i> 11</div>
                            <div class="view"><i class="fa fa-eye"></i> 9141</div>
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="anime__details__text">
                            <div class="anime__details__title">
                                <h3></h3> <!-- 제목을 나중에 채우기 위해 비워두세요 -->
                            </div>
                            <div class="anime__details__rating">
                                <div class="rating">
                                    <!-- 평점 -->
                                </div>
                                <span class="vote-count"></span> <!-- 투표 수를 나중에 채우기 위해 비워두세요 -->
                            </div>
                            <p class="plot">
                                <!-- 줄거리 -->
                            </p>
                            <div class="anime__details__widget">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6">
                                        <ul class="movie-left-details">
                                            <!-- 왼쪽 열에 상세 정보를 추가할 예정 -->
                                        </ul>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <ul class="movie-right-details">
                                            <!-- 오른쪽 열에 상세 정보를 추가할 예정 -->
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="anime__details__btn">
                                <a href="#" class="follow-btn"><i class="fa fa-heart-o"></i> Trailer</a>
                            </div>
                        </div>
                    </div>
                </div>

                <hr />
                <!-- Review Start-->
                <div class="col-lg-8 col-md-8">
                    <div class="anime__details__review">

                        <div class="section-title">
                            <h5>Reviews</h5>
                        </div>

                      
                        @foreach (var review in Model.Reviews)
                        {
                        <!-- 사용자가 리뷰를 작성함에 따라 실시간 추가 및 삭제 -->
                        <div class="anime__review__item">
                            <div class="anime__review__item__text">
                                    <h6>@review.User.NickName <span> - </span> <span> @review.Date</span></h6>
                                <p>
                                    @review.Content
                                </p>
                            </div>
                        </div>
                        }

                    </div>

                    <div class="section-title">
                        <h5>Your Review</h5>
                    </div>

                    <!-- Review Text Start -->
                    <div class="anime__details__form">
                        <form class="anime__review__form" asp-controller="Home" asp-action="ReviewAdd" method="post" onsubmit="return postReview(event)">
                            <div class="anime__details__form">

                                <!-- 리뷰 입력 부분 -->
                                <textarea id="review" name="review" placeholder="Your Comment"></textarea>

                            </div>

                            <!-- 영화 평점. 1~10까지 정수 -->
                            <select class="rating-list" id="rating" name="rating">
                                @for (int i = 1; i <= 10; i++)
                                {
                                    if (i == 5)
                                    {
                                        <option value="@i" selected>@i</option>
                                    }
                                    else
                                    {
                                        <option value="@i">@i</option>
                                    }
                                }
                            </select>

                            <!-- 영화 Id -->
                            <input type="hidden" id="movieId" name="movieId" value="@Model.MovieUid" />

                            <!-- 제출 버튼 -->
                            <button type="submit"><i class="fa fa-location-arrow"></i> 완료</button>
                        </form>
                    </div>
                    <!-- Review Text End -->

                </div>
                <!-- Review End -->
            </div>
        </div>
    </section>
</body>